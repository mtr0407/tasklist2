<div class="row">
  <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">
    <form class="form-horizontal">
      <%= form_for(task) do |f| %>
    
      <% if task.errors.any? %>
        <div class="alert alert-warning">
          <ul>
            <% task.errors.full_messages.each do |task| %>
              <li><%= task %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
  
        <div class="form-group">
        <label for="task_status">ステータス</label>
        <input type="text" name="task[status]" id="task_status">
        </div>
  
        <div class="form-group">
        <label for="task_title">タイトル</label>
        <input type="text" name="task[title]" id="task_title">
        </div>
  
        <div class="form-group">
        <label for="task_content">メッセージ</label>
        <input type="text" name="task[content]" id="task_content">
        </div>
      
      <%= f.submit '作成', class: 'btn btn-primary' %>
    <% end %>
    </form>
  </div>
</div>
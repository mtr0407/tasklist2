<% if logged_in? %>
<p>ログイン完了ユーザ: <%= current_user.name %></p>

<h1>タスクリスト</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.id, task %>:<%= task.title %> &gt;<%= task.content %>&gt;<%= task.status %></li>
  <% end %>
</ul>
<%= paginate @tasks %>

<%= link_to 'タスクの新規作成', new_task_path %>

<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Microposts</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>